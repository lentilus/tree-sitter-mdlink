{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "mdlink",
  "rules": {
    "source_file": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "metadata"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "_inline"
          }
        }
      ]
    },
    "metadata": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "---"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "metadata_pair"
          }
        },
        {
          "type": "STRING",
          "value": "---"
        }
      ]
    },
    "metadata_pair": {
      "type": "SEQ",
      "members": [
        {
          "type": "FIELD",
          "name": "key",
          "content": {
            "type": "SYMBOL",
            "name": "metadata_key"
          }
        },
        {
          "type": "STRING",
          "value": ":"
        },
        {
          "type": "FIELD",
          "name": "value",
          "content": {
            "type": "SYMBOL",
            "name": "metadata_value"
          }
        }
      ]
    },
    "metadata_key": {
      "type": "TOKEN",
      "content": {
        "type": "PATTERN",
        "value": "[^\\n:]+"
      }
    },
    "metadata_value": {
      "type": "TOKEN",
      "content": {
        "type": "PATTERN",
        "value": "[^\\n]*"
      }
    },
    "source_line": {
      "type": "PATTERN",
      "value": ".*"
    },
    "_inline": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "link"
        },
        {
          "type": "PATTERN",
          "value": "[^\\[\\]\\(\\)\\n]+"
        }
      ]
    },
    "link": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "["
        },
        {
          "type": "FIELD",
          "name": "text",
          "content": {
            "type": "SYMBOL",
            "name": "label"
          }
        },
        {
          "type": "STRING",
          "value": "]"
        },
        {
          "type": "STRING",
          "value": "("
        },
        {
          "type": "FIELD",
          "name": "destination",
          "content": {
            "type": "SYMBOL",
            "name": "destination"
          }
        },
        {
          "type": "STRING",
          "value": ")"
        }
      ]
    },
    "label": {
      "type": "PATTERN",
      "value": "[^\\]\\n]+"
    },
    "destination": {
      "type": "PATTERN",
      "value": "[^\\)\\n]+"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s+"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}